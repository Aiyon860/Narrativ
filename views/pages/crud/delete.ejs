<!-- Confirmation Message -->
<div class="confirmation-message d-none">
  <div class="d-flex justify-content-center align-items-center min-vh-100 sticky-top">
    <div class="container">
      <div class="row">
        <div class="col-xl col-lg-3 col-md-3 col-sm-2 col-1">
          <!--  -->
        </div>
    
        <div class="col-xl col-lg-6 col-md-6 col-sm-8 col-10 p-3 py-4 bg-white rounded-3">
          <div class="container">
            <div class="message-header row">
              <h3 id="confirmation-message-title" class="col-12 col-lg-8 d-inline-block mb-3 open-sans-bold">Confirm Deletion</h3>

              <div class="col col-lg-2 mb-half-a-rem">
                <!--  -->
              </div>

              <div id="close-confirm-deletion-button" class="close-confirm-deletion-button col col-lg-2 text-end d-lg-block d-none d-flex align-items-center justify-content-end mb-half-a-rem">
                <button type="button" class="btn p-0">
                  <i id="close-icon" class="fa fa-close fs-5 p-1 px-2 rounded-1"></i>
                </button>
              </div>
            </div>

            <div class="mb-5 row">
              <p id="confirmation-message-description" class="col-12 col-lg-10 open-sans-regular">Are you sure you want to delete the blog post "<%= locals.title %>"? This action cannot be undone.</p>

              <div class="col col-lg-2">
                <!--  -->
              </div>
            </div> 

            <div id="confirm-cancel-delete-container" class="text-end">
              <button id="bg-cancel-confirmation" class="btn open-sans-regular rounded-2 me-1">Cancel</button>
              <a href="/" id="bg-delete-confirmation" class="btn open-sans-regular bg-red-danger rounded-2 text-white">Delete</a>
            </div>
          </div>
        </div>
        
        <div class="col-xl col-lg-3 col-md-3 col-sm-2 col-1">
          <!--  -->
        </div>
      </div>
    </div>
  </div>
</div>